class IOExample inherits IO {
    inputAndPrint() : SELF_TYPE {
        {
            out_string("Please enter a number: ");
            let x : Int <- in_int() in {
                out_string("You entered: ");
                out_int(x);
            };
            self;
        };
    };
};

class Main {
    function main() : Object {
        let ioExample : IOExample <- new IOExample in {
            ioExample.inputAndPrint();
        };
        new Object;
    };
};
