class player {

    name : String <- "Player";
    health : Int <- 100;
    attack : Int <- 50;
    prueba_int : Int <- 0;

    init(hardmode : bool, player_name : String) : Int {

        name <- player_name;

        if difficulty = false then 
            health <- 80;
            attack <- 20;
        else
            health <- 50;
            attack <- prueba_int;
        fi;

        return health;
    };

    get_health() : Int {
        return health;
    };

    get_attack() : Int {
        return attack;
    };

    hit() : void {
        health <- health - 10;
        return void;
    };

};

class enemy inherits player {

    name : String <- "Enemy";
    health : Int <- 100;
    attack : Int <- 50;

    init(hardmode : bool, enemy_name : String) : Int {

        name <- enemy_name;
        pruebavalor: Int <- 0;

        if difficulty = false then 
            health <- 80;
            attack <- 20;
        else
            health <- 50;
            attack <- 10;
        fi;

        return pruebavalor;
    };

    get_health() : Int {
        return health;
    };

    get_attack() : Int {
