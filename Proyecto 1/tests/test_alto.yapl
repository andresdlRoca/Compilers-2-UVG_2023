class Item {

    type : String;
    name : String;
    description : String;
    price : Int;

    init(item_type : String, item_name : String, item_description : String, item_price : Int, rarity: Int) : void {

        type <- item_type;
        name <- item_name;
        description <- item_description;
        price <- item_price;

        if rarity = 5 then
            price <- price * 3;
        fi;

        if rarity = 4 then
            price <- price * 2;
        fi;

        if rarity = 3 then
            price <- price * 1;
        fi;



        return void;
    };

};

